---
// imports
import Link from "./Link.astro";

const { prevUrl, nextUrl } = Astro.props;
---
<nav aria-label="Blog pages" class="pagination-nav">
  {prevUrl && (
    <Link
      text="Previous"
      href={prevUrl}
      style="primary"
      borderVisible={true}
      isFilled={false}
      icon={{
        name: "material-symbols:arrow-circle-left-rounded",
        side: "left",
      }}
    />
  )}
  {nextUrl && (
    <Link
      text="Next"
      href={nextUrl}
      style="primary"
      borderVisible={true}
      isFilled={false}
      icon={{
        name: "material-symbols:arrow-circle-right-rounded",
        side: "right",
      }}
    />
  )}
</nav>
